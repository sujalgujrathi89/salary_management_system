<h3> All Users</h3>

<table>
  <tr>
  <td>Name</td>
  <td>Address</td>
  <td>Contact_Number</td>
  <td>Email</td>
  </tr>
<% @users.each do |u| %>
  <tr>
  <td><%= u.name %></td>
  <td><%= u.address %></td>
  <td><%= u.contact_no %></td>
  <td><%= u.email %></td>
   <% if u.is_admin == nil %> 
            <td><%= link_to 'Approve',active_user_path(u) %></td>
            <td><%= link_to 'Edit', edit_user_path(u) %></td>
             <td><%= link_to 'Destroy',user_path(u), :method => :delete, data: { confirm: 'Are you sure?' } %></td>
		
   <% else %>
			<td><%= link_to 'Unapprove', active_user_path(u) %></td>
            <td><%= link_to 'Edit', edit_user_path(u) %></td>
            <td><%= link_to 'Destroy',user_path(u), :method => :delete, data: { confirm: 'Are you sure?' } %></td>
            
   <%end%>
</tr>  
<%end%>
</table>
